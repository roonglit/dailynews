<!-- start of breadcumb-section -->
<div class="bg-[url(/images/page-title.jpg)] bg-no-repeat bg-center bg-cover min-h-[400px] relative flex justify-center flex-col z-10
    sm:min-h-[250px] before:absolute before:left-0 before:top-0 before:w-full before:h-full before:bg-[#232f4b]
    before:-z-10 before:opacity-70">
  <div class="wraper max-w-[1200px] mx-auto px-4">
    <div class="grid grid-cols-12">
      <div class="col-span-12">
        <div class="text-center">
          <h2 class="text-6xl text-white mt-[-10px] mb-[20px] sm:text-3xl sm:mb-[10px]">Books Library
          </h2>
          <ul class="">
            <li class="inline-block px-[5px] text-white relative text-xl font-heading-font sm:text-lg after:content-['/'] after:left-[7px]">
              <%= link_to "Home", root_path %>
            </li>
            <li class="text-[#cbd4fd] inline-block px-[5px]  relative text-xl font-heading-font sm:text-lg ">
              <span>Books</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end of wpo-breadcumb-section-->

<!-- start books-section -->
<section class="py-[100px] md:py-[80px] sm:py-[60px]">
  <div class="wraper max-w-[1200px] mx-auto px-4">
    <% if @books.any? %>
      <div class="mx-[-15px] sm:mx-[-7px]">
        <% @books.each do |book| %>
          <%= render partial: 'book_card', locals: { book: book } %>
        <% end %>
      </div>
      
      <!-- Pagination (if needed in future) -->
      <div class="text-center mt-[60px] md:text-left md:mt-[40px] clear-both">
        <ul class="inline-block overflow-hidden text-center">
          <li class="float-left mr-[10px] sm:mr-[5px] group">
            <a href="#" aria-label="Previous" class="bg-[#f5f5f5] w-[50px] h-[50px] leading-[50px] text-[16px] font-semibold
                text-[#0a272c] block md:w-[40px] md:h-[40px] md:leading-[40px] md:text-[15px] 
                transition-all duration-300 group-hover:bg-[#3756f7] group-hover:text-white">
              <i class="ti-angle-left"></i>
            </a>
          </li>
          <li class="float-left mr-[10px] sm:mr-[5px] group">
            <a href="#" class="bg-[#3756f7] w-[50px] h-[50px] leading-[50px] text-[16px] font-semibold
                text-white block md:w-[40px] md:h-[40px] md:leading-[40px] md:text-[15px] 
                transition-all duration-300 group-hover:bg-[#3756f7] group-hover:text-white">1</a>
          </li>
          <li class="float-left group">
            <a href="#" aria-label="Next" class="bg-[#f5f5f5] w-[50px] h-[50px] leading-[50px] text-[16px] font-semibold
                text-[#0a272c] block md:w-[40px] md:h-[40px] md:leading-[40px] md:text-[15px] 
                transition-all duration-300 group-hover:bg-[#3756f7] group-hover:text-white">
              <i class="ti-angle-right"></i>
            </a>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-20">
        <h3 class="text-2xl text-gray-600 mb-4">No books available</h3>
        <p class="text-gray-500">Check back later for new additions to our library.</p>
      </div>
    <% end %>
  </div>
</section>
<!-- end books-section -->
