<div class="flex justify-center mt-5">
  <div class="w-95">
    <h3 class="text-center text-lg font-medium mt-5">Change your password</h3>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "contents space-y-2" }) do |f| %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token, class: "mt-6 -mb-3" %>

      <div class="form-inputs mt-6">
        <%= f.input :password,
                    label: "New password",
                    required: false,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "border border-gray-300 rounded-lg p-3 text-md focus:outline-none focus:ring-2 focus:ring-primary w-full" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: false,
                    input_html: { autocomplete: "new-password", class: "border border-gray-300 rounded-lg p-3 text-md focus:outline-none focus:ring-2 focus:ring-primary w-full" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "CHANGE MY PASSWORD", class: "btn btn-primary btn-wide mt-4 max-w-full" %>
      </div>
    <% end %>

    <div class="flex flex-row justify-center font-extralight gap-6 mt-6">
      <%= link_to "Sign in", new_session_path(resource_name), data: { turbo_frame: "devise" }, class: "text-primary" %>
      <%= link_to "Sign up", new_registration_path(resource_name), data: { turbo_frame: "devise" }, class: "text-primary" %>
    </div>
  </div>
</div>